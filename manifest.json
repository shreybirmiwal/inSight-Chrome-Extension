{
  "name": "inSight",
  "description" : "Visualizer for text in articles for easy reading",
  "version": "1.0.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",

    "default_icon": {
      "16": "bg.png",
      "32": "bg.png"
    }
  },
  "permissions": [
    "storage"
  ],

  "icons": {
    "16": "bg.png",
    "32": "bg.png",
    "48": "bg.png",
    "128": "bg.png"
  }
  
}